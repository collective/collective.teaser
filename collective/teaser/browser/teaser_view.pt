<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.teaser">
<body>

<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core">

    <p tal:condition="context/image|nothing">
      <strong><span omit-tag="" i18n:translate="label_image">Image</span>:</strong>
      <tal:img replace="structure context/image/tag" />
    </p>
    <p tal:condition="context/altimage|nothing">
      <strong><span omit-tag="" i18n:translate="label_altimage">Alternative Image</span>:</strong>
      <tal:img replace="structure context/altimage/tag" />
    </p>
    <p tal:condition="context/text|nothing">
      <strong><span omit-tag="" i18n:translate="label_text">Text</span>:</strong>
      <tal:field metal:use-macro="python:context.widget('text', mode='view')" />
    </p>
    <p tal:condition="context/link_internal|nothing">
      <strong><span omit-tag="" i18n:translate="label_link_internal">Internal Link</span>:</strong>
      <tal:field metal:use-macro="python:context.widget('link_internal', mode='view')" />
    </p>
    <p tal:condition="context/link_external|nothing">
      <strong><span omit-tag="" i18n:translate="label_link_external">External Link</span>:</strong>
      <a href=""
        tal:attributes="href context/link_external"
        tal:content="context/link_external">url</a>
    </p>
    <p tal:condition="context/importance|nothing">
      <strong><span omit-tag="" i18n:translate="label_importance">Importance</span>:</strong>
      <tal:importance replace="context/importance" />
    </p>

</metal:content-core>
</metal:content-core>

</body>
</html>
