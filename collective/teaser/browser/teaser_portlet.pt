<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="collective.teaser"
      tal:omit-tag="">

<dl class="portlet portletTeaser"
    i18n:domain="collective.teaser"
    tal:define="teasers view/teasers"
    tal:condition="teasers">

  <dt class="portletHeader">
    <span class="portletTopLeft"></span>
    <span tal:content="view/data/title" />
    <span class="portletTopRight"></span>
  </dt>

  <tal:rep repeat="teaser teasers">
    <dd class="portletItem">
      <a href="" tal:attributes="href teaser/url">
        <h3 tal:condition="teaser/title" tal:content="teaser/title" />
        <tal:cond condition="teaser/image">
          <tal:img replace="structure teaser/image" /><br/>
        </tal:cond>
        <p tal:condition="teaser/description" tal:content="teaser/description">
          TEXT
        </p>
      </a>
    </dd>
  </tal:rep>

</dl>
</html>